interface HazardZone {
  id: string;
  zoneName: string;
  coordinates: { x: number; y: number };
  hazardLevel: 'low' | 'medium' | 'high' | 'critical';
  density: number;
  incidents: number;
  lastIncident: string;
  hazardTypes: string[];
}

const GRID_SIZE = 6;
const screenWidth = Dimensions.get('window').width - 32;
const cellSize = screenWidth / GRID_SIZE;

